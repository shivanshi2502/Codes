//Total-Occurence of an element in an array using inbuilt functions

#include <iostream>
#include<algorithm>
using namespace std;

int main ()
{
  int n;
  cout << "enter size of array" << endl;
  cin >> n;
  int arr[1000];
  cout << "enter elements in array" << endl;
  for (int i = 0; i < n; i++)
    {
      cin >> arr[i];
    }
  int target;
  cout << "enter the target element" << endl;
  cin >> target;
  auto a = lower_bound (arr, arr + n, target);  //auto as the func returns iterator
  cout<<"first occurence is "<<a<<endl;
  auto b = upper_bound (arr, arr + n, target);
  cout<<"last occurence is "<<b<<endl;
  auto ans= b-a+1;
  cout<<"total occurence is "<<ans<<endl;
  return 0;
}
