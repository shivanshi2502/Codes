//to find key in astring
#include <iostream>
#include<string>
using namespace std;
bool findkey(string s,char key,int i){
    if(i>=s.length()){
        return 0;
    }
    if(s[i]==key){
        return 1;
    }
    return findkey(s,key,i+1);
}

int main()
{
    string s="lovebabbar";
    char key='r';
    int i=0;
    cout<<findkey(s,key,i);
}
