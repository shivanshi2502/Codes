// Given n pairs of parentheses, write a function to generate all combinations of well-formed parentheses.

void solve(vector<string>& ans,string output,int n,int open,int close){
        if(open==0 && close==0){
            ans.push_back(output);
            return;
        }
        //include opening bracket if we have remaining opening brackets left i.e. > 0
        if(open>0){
            solve(ans,output+'(',n,open-1,close);
        }
        //include closing bracket if remaining closing brackets > remaining opening brackets
        if(close>open){ 
            solve(ans,output+')',n,open,close-1);
        }
        return;
    }
    vector<string> generateParenthesis(int n) {
        vector<string> ans;
        string output="";
        int open=n; // number of remaining opening brackets
        int close=n; // number of remaining closing brackets
        solve(ans,output,n,open,close);
        return ans;
    }
