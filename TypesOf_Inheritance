// Single level Inheritance Example
#include <iostream>
using namespace std;
class Animal{
    public:
    int weight;
    string name;
    
    void eat(){
        cout<<"eating"<<endl;
    }
    
    void sleep(){
        cout<<"sleeping"<<endl;
    }
};
class Dog:public Animal{
    void print(){
        cout<<"weight: "<<this->weight<<endl;
        cout<<"name: "<<this->name<<endl;
    }
};
int main()
{
    Dog d1;
    d1.eat();
}



// Multi-level inheritance example
#include <iostream>
using namespace std;
class Fruit{
    public:
    int weight;
    string colour;
};
class Mango: public Fruit{
    public:
    int sugarLevel;
    int calories;
};
class Alphonso: public Mango{
    public:
    int price;
};
int main()
{
    Alphonso a1;
    cout<<a1.weight;
}



//Multiple Inheritance example
#include <iostream>
using namespace std;
class A{
    public:
    int chem;
};
class B{
    public:
    int chem;
};
class C:public A,public B{
    public:
    int maths;
};
int main()
{
    C obj;
    cout<<obj.A::chem<<" "<<obj.maths;
}



//Heirarchial Inheritance Example
#include <iostream>
using namespace std;
class Fruit{
    public:
    int weight;
    string colour;
};
class Mango: public Fruit{
    public:
    int sugarLevel;
    int calories;
};
class Banana: public Fruit{
    public:
    int calories;
    int size;
};
int main()
{
    Banana b1;
    cout<<b1.weight;
    Mango m1;
    cout<<m1.weight;
}



