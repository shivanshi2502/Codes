// Given a rod of length N and length of segments x,y,z. Find the maximum number of segments we can cut the rod in

#include<vector>
#include<iostream>
#include<limits.h>
using namespace std;
int solve(int N,int x,int y,int z){
    if(N==0){
        return 0;
    }
    if(N<0){
        return INT_MIN;
    }
    int maxi=INT_MIN;
    int ans1=solve(N-x,x,y,z)+1;
    int ans2=solve(N-y,x,y,z)+1;
    int ans3=solve(N-z,x,y,z)+1;
    maxi=max(ans1,max(ans2,ans3));
    return maxi;
}

int main()
{
    int N=7;
    int x=5;
    int y=2;
    int z=2;
    cout<<"maximum no of segments is: "<<solve(N,x,y,z);
    return 0;
}
