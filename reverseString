//reverse a string using recursion 

#include<bits/stdc++.h>
#include <iostream>
using namespace std;

void reverse(string& st, int s,int e){
    if(s>e){
        return;
    }
    swap(st[s],st[e]);
    reverse(st,s+1,e-1);
}

int main()
{
    string st="abcddedfg";
    int start=0;
    int end=st.length()-1;
    reverse(st,start,end);
    cout<<"reversed string is: "<<st;
    return 0;
}
