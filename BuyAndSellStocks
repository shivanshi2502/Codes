// buy and sell stocks (recursively)
//iterative solution gives TLE

int solve(vector<int>& prices,int& minPrice,int& maxProfit,int index){
        if(index==prices.size()){
            return maxProfit;
        }
        if(prices[index]<minPrice){
            minPrice=prices[index];
        }
        if(prices[index]-minPrice> maxProfit){
            maxProfit=prices[index]-minPrice;
        }
        return solve(prices,minPrice,maxProfit,index+1);
    }
    int maxProfit(vector<int>& prices) {
    int minPrice=INT_MAX;
        int maxProfit=INT_MIN;
        int index=0;
        return solve(prices,minPrice,maxProfit,index);
    }
