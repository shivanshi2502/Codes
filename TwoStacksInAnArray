#include <iostream>
using namespace std;

class stack{
    public:
    int top1;
    int* arr;
    int size;
    int top2;

    stack(int num){
        top1=-1;
        arr=new int[num];
        size=num;
        top2=size;
    }

    void push1(int data){
        //space is available or not
        if(top2-top1==1){
            cout<<"stack1 overflow, space not available"<<endl;
        }
        else{
            top1++;
            arr[top1]=data;
        }
    }

    void push2(int data){
        //space is available or not
        if(top2-top1==1){
            cout<<"stack2 overflow, space not available"<<endl;
        }
        else{
            top2--;
            arr[top2]=data;
        }
    }

    void pop1(){
        if(top1==-1){
            cout<<"stack1 underflow, no element in stack to remove"<<endl;
        }
        else{
           // arr[top1]=0;
            top1--;
        }
    }

    void pop2(){
        if(top2==size){
            cout<<"stack2 underflow, no element in stack to remove"<<endl;
        }
        else{
            //arr[top2]=0;
            top2++;
        }
    }
};

int main() {
    stack st(10);
}
