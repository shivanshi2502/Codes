class MinStack {
public:
    vector<pair<int,int> > v;
    MinStack() {
        
    }
    
    void push(int val) {
        if(v.empty()){
            pair<int,int>p;
            p.first=val;
            p.second=val;
            v.push_back(p);
        }
        else{
            pair<int,int>p;
            p.first=val;
            p.second=min(val,v.back().second);
            v.push_back(p);
        }
    }
    
    void pop() {
        v.pop_back();
    }
    
    int top() {
        return v.back().first;
    }
    
    int getMin() {
        return v.back().second;
    }
};
