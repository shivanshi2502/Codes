#include <iostream>
#include<stack>
using namespace std;

void insertAtBottom(stack<int>&st,int &elem){
    if(st.empty()){
        st.push(elem);
        return;
    }
    int temp=st.top();
    st.pop();
    insertAtBottom(st,elem);
    st.push(temp);
    return;
}

void reverse(stack<int>&st){
    //base case
    if(st.empty()){
        return;
    }
    int elem=st.top();
    st.pop();
    reverse(st);
    insertAtBottom(st,elem);
    return;
}

int main() {
    stack<int>st;
    st.push(10);
    st.push(20);
    st.push(30);
    st.push(40);
    st.push(50);
    st.push(60);
    cout<<"before: "<<endl;
    while(!st.empty()){
        cout<<st.top()<<" ";
        st.pop();
    }
    cout<<endl;
    st.push(10);
    st.push(20);
    st.push(30);
    st.push(40);
    st.push(50);
    st.push(60);
    reverse(st);
    cout<<"after: "<<endl;
    while(!st.empty()){
        cout<<st.top()<<" ";
        st.pop();
    }
}
