Node*merge(Node*a,Node*b){
	if(a==NULL){
		return b;
	}
	if(b==NULL){
		return a;
	}
	Node*ans=NULL;
	if(a->data < b->data){
		ans=a;
		a->bottom=merge(a->bottom,b);
	}
	else{
		ans=b;
		b->bottom=merge(a,b->bottom);
	}
	return ans;
}
Node *flatten(Node *root)
{
   // Your code here
   if(root==NULL){
		return root;
	}
	Node* ans=merge(root,flatten(root->next));
	return ans;
}
