//find odd appearing element

#include <iostream>
using namespace std;
int Search(int arr[], int size){
    int s=0;
    int e=size-1;
    int m=s+(e-s)/2;
    while(s<=e){
        if(m%2==0 && arr[m]==arr[m+1]){
            s=m+1;
        }
        else if(m%2==0 && arr[m]==arr[m-1]){
            e=m-1;
        }
        else if(m%2==1 && arr[m]==arr[m-1]){
            s=m+1;
        }
        else{
            e=m-1;
        }
        m=s+(e-s)/2;
    }
    if(s==e){
        return s;
    }
    return m;
}
int main()
{
    int n;
    cout<<"enter no of elements in array"<<endl;
    cin>>n;
    int arr[1000];
    cout<<"enter the elements in array"<<endl;
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    int ans= Search(arr,n);
    cout<<"the element exists at index "<<ans<<endl;
    return 0;
}
