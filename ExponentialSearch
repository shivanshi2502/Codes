#include <iostream>
#include<algorithm>
#include<vector>
using namespace std;
int binarySearch(int arr[],int start, int end,int x){
    int mid=start+(end-start)/2;
    if(start==end){
        return start;
    }
    while(start<=end){
        if(arr[mid]==x){
            return mid;
        }
        else if(x> arr[mid]){
            start=mid+1;
        }
        else{
            end=mid-1;
        }
        mid=start+(end-start)/2;
    }
    return -1;
}
int exponentialSearch(int arr[],int n, int x){
    if(arr[0]==x){
        return 0;
    }
    int i=1;
    while(i<=n && arr[i]<=x){
        i=i*2;
    }
    return binarySearch(arr,i/2,min(i,n-1),x);
}
int main(){
    int arr[]={1,3,5,7,11,14,15,18,34,42,56,78};
    int x=42;
    int n=12;
    cout<<"element is present at index "<<exponentialSearch(arr,n,x)<<endl;
    return 0;
}
