#EKO-SPOJ IMPLEMENTATION

#include <iostream>
#include<algorithm>
using namespace std;
bool isPossible(int arr[], int h, int mid, int size){
    int sum=0;
    for(int i=0;i<size;i++){
        if(arr[i]>mid){
            sum=sum+arr[i]-mid;
        }
    }
    if(sum>=h){
        return true;
    }
    else{
        return false;
    }
}
int solve(int arr[],int n, int h){
    sort(arr,arr+n);
    int s=0;
    int e=arr[n-1];
    int ans=-1;
    int mid=s+(e-s)/2;
    while(s<=e){
        if(isPossible(arr,h,mid,n)){
            ans=mid;
            s=mid+1;
        }
        else{
            e=mid-1;
        }
        mid=s+(e-s)/2;
    }
    return ans;
}
int main(){
    int n=4;
    int h=7;
    int arr[]={20,15,10,17};
    cout<<solve(arr,n,h)<<endl;
    return 0;
}
