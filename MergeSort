//Merge Sort Code

#include <iostream>
#include<bits/stdc++.h>
using namespace std;
void Merge(int* arr,int n,int s,int e){
    int mid=s+(e-s)/2;
    int len1=mid-s+1;
    int len2=e-mid;
    int* leftArray= new int[len1];
    int* rightArray= new int[len2];
    int k=s;
    for(int i=0;i<len1;i++){
        leftArray[i]=arr[k++];
    }
    k=mid+1;
    for(int i=0;i<len2;i++){
        rightArray[i]=arr[k++];
    }
    int leftIndex=0;
    int rightIndex=0;
    k=s;
    while(leftIndex<len1 && rightIndex<len2){
        if(leftArray[leftIndex]<rightArray[rightIndex]){
            arr[k++]=leftArray[leftIndex++];
        }
        else{
            arr[k++]=rightArray[rightIndex++];
        }
    }
    while(leftIndex<len1){
        arr[k++]=leftArray[leftIndex++];
    }
    while(rightIndex<len2){
        arr[k++]=rightArray[rightIndex++];
    }
    delete[]leftArray;
    delete[]rightArray;
}
void mergeSort(int* arr,int n,int s,int e){
    int mid=s+(e-s)/2;
    if(s>=e){
        return;
    }
    mergeSort(arr,n,s,mid);
    mergeSort(arr,n,mid+1,e);
    Merge(arr,n,s,e);
    return;
}
int main() {
    int arr[]={38,27,43,3,9,20};
    int n=6;
    int s=0;
    int e=n-1;
    mergeSort(arr,n,s,e);
    cout<<"Printing array after sorting: "<<endl;
    for(int i=0;i<n;i++){
        cout<<arr[i]<<" ";
    }
    return 0;
}   
